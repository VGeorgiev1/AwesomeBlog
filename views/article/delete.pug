extends layout 

block content
  .container.body-content
    .well
      form.form-horizontal(method='POST', action='/article/delete/' + id)
        fieldset
          legend Delete Article
          .form-group
            label.col-sm-4.control-label Article Title
            .col-sm-4
              input#articleTitle.form-control(type='text', value=title, name='title', disabled)
          .form-group
            label.col-sm-4.control-label Content
            .col-sm-6
              textarea#articleContent.form-control(rows='5', name='content', disabled) {{content}}
          .form-group
            .col-sm-4.col-sm-offset-4
              a.btn.btn-default(href='/') Cancel
              |  
              button.btn.btn-danger(type='submit') Delete
