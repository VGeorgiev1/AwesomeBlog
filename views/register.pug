extends layout

block content
  .container.body-content
    .well
      form.form-horizontal(enctype='multipart/form-data', method='post', action='/register')
        fieldset
          legend Register
          .form-group
            label.col-sm-4.control-label Email
            .col-sm-4
              input#inputEmail.form-control(type='email', name='email', placeholder='Email', required, value=email)
          .form-group
            label.col-sm-4.control-label Full Name
            .col-sm-4
              input#inputFullName.form-control(type='text', name='fullName', placeholder='Full Name', required, value=fullName)
          .form-group
            label.col-sm-4.control-label Password
            .col-sm-4
              input#inputPassword.form-control(type='password', name='password', placeholder='Password', required)
          .form-group
            label.col-sm-4.control-label Confirm Password
            .col-sm-4
              input#inputPassword.form-control(type='password', name='repeatedPassword', placeholder='Confirm Password', required)
          .form-group
            label.col-sm-4.control-label Profile Picture:
            .col-sm-6
              input#image.form-control(type='file', name='image')
          .form-group
            .col-sm-4.col-sm-offset-4
              button.btn.btn-default(type='reset') Cancel
              button.btn.btn-primary(type='submit') Submit
