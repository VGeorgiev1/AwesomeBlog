extends layout

block content
  .container.body-content
    .well
      form.form-horizontal(method='post', action='/login')
        fieldset
          legend Login
          .form-group
            label.col-sm-4.control-label Email
            .col-sm-4
              input.form-control(maxlength= '30', type='text', placeholder='your@email.here', required, name='email')
          .form-group
            label.col-sm-4.control-label Password
            .col-sm-4
              input.form-control(maxlength= '30', type='password', required, name='password')
          .form-group
            .col-sm-4.col-sm-offset-4
              button.btn.btn-primary.widt(type='submit') Login
              a.btn.btn-default.widt(href='/') Cancel
