doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Awesome Blog
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery-1.10.2.js')
    script(src='/js/bootstrap.js')
  body
    header
      .navbar.navbar-default.navbar-fixed-top
        .container
          .navbar-header
            a.navbar-brand.text-uppercase(href='/') Awesome Blog
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
          if user
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right.nav-pills
                li
                  a(href='/user/details') User(#{user.email})
                li
                  a(href='/article/create') New Article
                li
                  a(href='/logout') Logout
          else
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right.nav-pills
                li
                  a(href='/register') Register
                li
                  a(href='/login') Login
    if info
      .container.body-content
        .well
          h4= info
    |
    block content
    |
    div.divFoot
    |
    footer
      .modal-footer.navbar-fixed-bottom
        .container
          form.form-inline(autocomplete='off', method='POST', action='/search')
            .form-group.sup
              label.sr-only Name
              input.sup.form-control(maxlength='30', placeholder='user#Name OR TitleName OR own', name='search')
              button.searchBtn.btn.btn-danger(type='submit') Search
            h4.pull-right.sup &copy; Awesome Blog Foundation
